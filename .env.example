# Environment Variables for Docker Deployment
# Copy this file to .env and fill in your actual values

# MongoDB Cloud (MongoDB Atlas or other cloud provider)
MONGO_URI=

# Redis Cloud (Redis Cloud, Upstash, or other cloud provider)
REDIS_URL=

# JWT Secret Key
SECRET_KEY=

# Email Configuration (for OTP)
EMAIL_USER=
EMAIL_PASSWORD=

# Stellar Blockchain Network
STELLAR_SERVER=https://horizon-testnet.stellar.org
# For production use: https://horizon.stellar.org

# Frontend API URL (optional, for Docker deployment)
VITE_API_URL=http://localhost:5000

